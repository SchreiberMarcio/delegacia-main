{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "./src",                                  
    "outDir": "./dist",                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true,
    "moduleResolution":"node"                               
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
